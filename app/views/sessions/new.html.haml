%article.form-link
  = link_to 'Create Account', new_user_path, class: 'btn btn-sm'

%article.form-container
  %article.form-header
    %h3 Login

  %article.form-fields
    = bootstrap_form_tag url: login_path do |f|
      %article.form-field
        = f.email_field :email, hide_label: true, placeholder: 'email'
      %article.form-field
        = f.password_field :password, hide_label: true, placeholder: 'password'
      %article.form-field
        %article.form-button
          = f.submit 'Enter'
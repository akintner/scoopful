- items.each do |item|
  - if item.active?
    %section.item-card{ :id => item.name.tr(' ', '-') }
      %article.item-card-image
        %a{'href' => item_path(item)}
          %img{ 'src' => item.image_url, 'alt' => item.name }
      %article.item-info
        %aside.item-title
          %h3
            = link_to item.name, item_path(item)
        %aside.item-price
          = format_price_per_unit(item)
      %article.item-description
        %p
          = item.description
      %article.item-card-button
        = button_to "Add to Cart", carts_path(item_id: item.id)
